<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AddDaataCenter">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_marginTop="36sp"
            android:layout_marginStart="8sp"
            android:layout_marginEnd="8sp"
            android:layout_marginBottom="28sp"
            android:textSize="32sp"
            android:textColor="@android:color/black"
            android:id="@+id/vmtabletextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add VM Table" />

        <EditText
            android:layout_marginTop="16sp"
            android:layout_marginStart="18sp"
            android:layout_marginEnd="18sp"
            android:layout_marginBottom="8sp"
            android:id="@+id/vmtableeditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="VM ID" />

        <EditText
            android:layout_marginTop="16sp"
            android:layout_marginStart="18sp"
            android:layout_marginEnd="18sp"
            android:layout_marginBottom="8sp"
            android:id="@+id/vmtableeditText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Memory" />


        <EditText
            android:layout_marginTop="16sp"
            android:layout_marginStart="18sp"
            android:layout_marginEnd="18sp"
            android:layout_marginBottom="8sp"
            android:id="@+id/vmtableeditText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="RAM" />

        <EditText
            android:layout_marginTop="16sp"
            android:layout_marginStart="18sp"
            android:layout_marginEnd="18sp"
            android:layout_marginBottom="8sp"
            android:id="@+id/vmtableeditText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="MIPS"/>

        <EditText
            android:layout_marginTop="16sp"
            android:layout_marginStart="18sp"
            android:layout_marginEnd="18sp"
            android:layout_marginBottom="8sp"
            android:id="@+id/vmtableeditText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Pess Number" />

        <EditText
            android:layout_marginTop="16sp"
            android:layout_marginStart="18sp"
            android:layout_marginEnd="18sp"
            android:layout_marginBottom="8sp"
            android:id="@+id/vmtableeditText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Bandwidth" />


        <EditText
            android:layout_marginTop="16sp"
            android:layout_marginStart="18sp"
            android:layout_marginEnd="18sp"
            android:layout_marginBottom="8sp"
            android:id="@+id/vmtableeditText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="TimeZone" />

        <EditText
            android:layout_marginTop="16sp"
            android:layout_marginStart="18sp"
            android:layout_marginEnd="18sp"
            android:layout_marginBottom="8sp"
            android:id="@+id/vmtableeditText8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="in use?"/>

        <Button
            android:layout_marginTop="16sp"
            android:layout_marginStart="8sp"
            android:layout_marginEnd="8sp"
            android:layout_marginBottom="8sp"
            android:textSize="18sp"
            android:id="@+id/vmtablebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add VM Table"/>
    </LinearLayout>
</ScrollView>